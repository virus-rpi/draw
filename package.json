{
  "name": "draw",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n server,client -c red,blue \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch ./server/server.ts",
    "dev:client": "next dev",
    "build": "next build",
    "start": "concurrently -n server,client -c red,blue \"npm run start:server\" \"npm run start:client\"",
    "start:server": "tsx ./server/server.ts",
    "start:client": "next start",
    "lint": "next lint",
    "postinstall": "node scripts/patch-tldraw.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/websocket": "^11.2.0",
    "@tldraw/editor": "^4.2.1",
    "@tldraw/sync": "^4.2.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ws": "^8.18.1",
    "@vercel/blob": "^2.0.0",
    "better-sqlite3": "^12.5.0",
    "concurrently": "^9.2.1",
    "fastify": "^5.6.2",
    "next": "^16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tldraw": "^4.2.1",
    "tsx": "^4.21.0",
    "unfurl.js": "^6.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.23",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5"
  }
}
